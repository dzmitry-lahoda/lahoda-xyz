<Window x:Class="show_dialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:show_dialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid VerticalAlignment="Stretch">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button VerticalAlignment="Top" Click="Button_Click_1">Show Save File Dialog</Button>
            <Button VerticalAlignment="Top" Click="Button_Click_2">Show window with button to show Save File Dialog</Button>
            <Button Click="Button_Click_3">Show window with button in new thread with dispatcher</Button>
            <Button Click="Button_Click_4">Get shell item with no access.</Button>
            <Button VerticalAlignment="Top" Click="Button_Click">Dump user and environment security related info</Button>
            <TextBox x:Name="log" MinHeight="300" VerticalAlignment="Top" Height="500" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Visible"></TextBox>
        </StackPanel>
    </Grid>
</Window>
